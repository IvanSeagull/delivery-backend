{
    "openapi": "3.0.0",
    "info": {
      "version": "1.0.0", 
      "title": "Delivery backend",
      "description": "simple delivery backend",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:5000",
    "basePath": "/",
    "servers": [
        {
          "url": "http://localhost:5000"
        }
      ],
    "apis": ["./Routes/*.js", "./index.js"],

    "tags": [
      {
        "name": "Users",
        "description": "user-controller"
      },
      {
        "name": "Categories",
        "description": "category-controller"
      },
      {
        "name": "Products",
        "description": "product-controller"
      },
      {
        "name": "Orders",
        "description": "order-controller"
      }
    ],
    "paths": {
        "/api/users/register": {
            "post": {
                "tags": ["Users"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "summary": "Register new user",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "jwtToken"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
          },

          "/api/users/login": {
            "post": {
                "tags": ["Users"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "summary": "Login",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "jwtToken"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
          },
          "/api/users/update_password": {
            "post": {
                "tags": ["Users"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "oldPassword": {
                                        "type": "string"
                                    },
                                    "newPassword": {
                                        "type": "string"
                                    },
                                    "newPassword2": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "summary": "Update password by jwt token",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
          },
          "/api/products/": {
            "get": {
                "tags": ["Products"],
                
                "summary": "Get all products",
                "responses": {
                    "200": {
                        "description": "OK"
                    },

                    "500": {
                        "description": "Server error"
                    }
                }
            }
          },
          "/api/products/add": {
            "post": {
                "tags": ["Products"],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "integer"
                                    },
                                    "amount": {
                                        "type": "integer"
                                    },
                                    "discount": {
                                        "type": "integer"
                                    },
                                    "categoryId": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                },
                "summary": "Add product to db",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Validation error"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
          },
          "/api/products/update/:id": {
            "put": {
                "tags": ["Products"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Product id",
                        "schema":{
                            "type": "string"
                        }
                    }
                ],
                "summary": "Update product by id",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Validation error"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
          },
          "/api/products/delete/:id": {
            "delete": {
                "tags": ["Products"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Product id",
                        "schema":{
                            "type": "string"
                        }
                    }
                ],
                "summary": "Delete product from db",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Validation error"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
          }
        }
  }